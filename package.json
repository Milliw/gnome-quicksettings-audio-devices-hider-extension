{
  "name": "quicksettings-audio-devices-hider",
  "version": "1.0.0",
  "description": "A Gnome Shell extension that allows you to hide selected devices from the Quick Settings audio devices panel",
  "main": "extension.js",
  "scripts": {
    "build": "npm run lock:types && npm run build:types && npm run build:ts && npm run gen:locale && npm run build:extension",
    "clean": "npm run clean:ts && npm run build:types",
    "lock:types": "rm -rf docs-lock.json && cross-env XDG_DATA_DIRS=$XDG_DATA_DIRS:/usr/share/gir-1.0:/usr/share/gnome-shell:/usr/lib/mutter-12:/usr/lib/mutter-11:/usr/lib64/mutter-12:/usr/lib64/mutter-11 npx gi-ts config --lock",
    "build:types": "npm run clean:types && gi-ts generate",
    "gen:locale": "npm run ts-node scripts/generateLocale.ts",
    "clean:types": "rm -rf ./@types",
    "build:ts": "npm run clean:ts && rollup -c",
    "clean:ts": "rm -rf ./dist",
    "build:extension": "npm run build:schema",
    "build:schema": "npm run clean:schema && glib-compile-schemas ./resources/schemas --targetdir=./dist/schemas/",
    "clean:schema": "rm -rf ./dist/schemas/*.compiled",
    "build:package": "npm run build && rm -rf './dist/pano@elhan.io.zip' && cd ./dist && zip -qr 'pano@elhan.io.zip' .",
    "watch": "npm run build && npm run rollup -c --watch",
    "lint": "eslint --ext .ts src/",
    "shell:restart": "busctl --user call org.gnome.Shell /io/elhan/Pano io.elhan.Pano restart",
    "build-and-restart": "npm run build && npm run shell:restart",
    "build:app": "glib-compile-schemas resources/schemas/ && npm run clean:ts && rollup -c",
    "start:dev:wayland": "npm run build:app && dbus-run-session -- gnome-shell --nested --wayland",
    "linkdist": "ln -s \"$PWD/dist\" \"$HOME/.local/share/gnome-shell/extensions/quicksettings-audio-devices-hider@marcinjahn.com\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.4",
    "@types/events": "^3.0.0",
    "@types/gettext-parser": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "fill-pot-po": "^2.1.9",
    "gettext-extractor": "^3.5.4",
    "gettext-parser": "^6.0.0",
    "glob": "^8.0.3",
    "husky": "^4.3.8",
    "prettier": "^2.7.1",
    "rollup": "^2.78.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-styles": "^4.0.0",
    "rollup-plugin-visualizer": "^5.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@gi-types/adw1": "^1.1.1",
    "@gi-types/cally": "^7.0.3",
    "@gi-types/clutter10": "^10.0.1",
    "@gi-types/gdk4": "^4.0.1",
    "@gi-types/gdkpixbuf2": "^2.0.2",
    "@gi-types/gio2": "^2.72.1",
    "@gi-types/glib2": "^2.72.1",
    "@gi-types/gobject2": "^2.72.1",
    "@gi-types/graphene1": "^1.0.1",
    "@gi-types/gtk4": "^4.6.1",
    "@gi-types/gvc1": "^1.0.1",
    "@gi-types/meta10": "^10.0.1",
    "@gi-types/pango1": "^1.50.1",
    "@gi-types/shell0": "^0.1.1",
    "@gi-types/soup3": "^3.0.1",
    "@gi-types/st1": "^1.0.1",
    "adm-zip": "^0.5.10",
    "esbuild": "^0.17.18"
  }
}
