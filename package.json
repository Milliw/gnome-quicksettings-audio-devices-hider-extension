{
  "name": "quicksettings-audio-devices-hider",
  "version": "1.0.0",
  "description": "A Gnome Shell extension that allows you to hide selected devices from the Quick Settings audio devices panel",
  "main": "extension.js",
  "scripts": {
    "clean:ts": "rm -rf ./dist",
    "clean:schema": "rm -rf ./dist/schemas/*.compiled",
    "lint": "eslint --ext .ts src/",
    "build:app": "glib-compile-schemas resources/schemas/ && npm run clean:ts && rollup -c",
    "start:dev:wayland": "npm run build:app && dbus-run-session -- gnome-shell --nested --wayland",
    "linkdist": "ln -s \"$PWD/dist\" \"$HOME/.local/share/gnome-shell/extensions/quicksettings-audio-devices-hider@marcinjahn.com\"",
    "build:package": "npm run build:app && rm -rf './dist/quicksettings-audio-devices-hider@marcinjahn.com.zip' && cd ./dist && zip -qr 'quicksettings-audio-devices-hider@marcinjahn.com.zip' ."
  },
  "author": "Marcin Jahn",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^4.3.8",
    "prettier": "^2.7.1",
    "rollup": "^2.78.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-styles": "^4.0.0"
  },
  "dependencies": {
    "@gi-types/adw1": "^1.1.1",
    "@gi-types/gio2": "^2.72.1",
    "@gi-types/gtk4": "^4.6.1",
    "@gi-types/gvc1": "^1.0.1",
    "esbuild": "^0.17.18",
    "typescript": "5.0.4"
  }
}
